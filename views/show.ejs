<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-5">
            <div class="card text-center">
                <div class="card-header">
                    <h3>Single student data</h3>
                </div>
                <div class="card-body d-flex">
                    <div class="img-div w-50 mx-2">
                        <img style="width: 100%; height: 210px; object-fit: cover;" src="/assets/upload/images/<%= student.photo %>" alt="">
                    </div>
                    <div class="data-div w-50 mx-2">
                        <ul class="list-group">
                            <li class="list-group-item"><%= student.name %></li>
                            <li class="list-group-item"><%= student.email %></li>
                            <li class="list-group-item"><%= student.cell %></li>
                            <li class="list-group-item"><%= student.location %></li>
                            <li class="list-group-item"><%= student.username %></li>
                        </ul>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a class="btn btn-primary" href="/student">Back</a>
                    <a class="btn btn-warning" href="/student/edit/<%= student.username %>">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>