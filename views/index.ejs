
    <div class="container my-4">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="card">
                    <div class="card-header d-flex justify-content-around">
                        <h3>All students</h3>
                        <a href="/student/create" class="btn btn-primary">Add new student</a>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-dark">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>E-mail</th>
                                    <th>Cell</th>
                                    <th>Location</th>
                                    <th>Photo</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% students.forEach((student, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %></td>
                                        <td><%= student.name %></td>
                                        <td><%= student.email %></td>
                                        <td><%= student.cell %></td>
                                        <td><%= student.location %></td>
                                        <td><img style="width: 40px; height: 40px; object-fit: cover;" src="/assets/upload/images/<%= student.photo %>" alt=""></td>
                                        <td>
                                            <a href="/student/<%= student.username %>" class="btn btn-info">View <i class="fa-solid fa-eye"></i></a>
                                            <a href="/student/edit/<%= student.username %>" class="btn btn-warning">Edit <i class="fa-solid fa-pen-to-square"></i></a>
                                            <a href="/student/delete/<%= student.username %>" class="btn btn-danger">Delete <i class="fa-regular fa-trash-can"></i></->
                                        </td>
                                    </tr> 
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>